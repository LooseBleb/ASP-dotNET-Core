@model SalesWebMVC.Models.ViewModels.SellerRecordFromViewModel
@{
}

<h2>Sales Record</h2>



<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-success">
            <th>@Html.DisplayFor(model => model.Seller.Name)</th>
            <th>@Html.DisplayFor(model => model.Seller.Email)</th>
            <th>@Html.DisplayFor(model => model.Seller.BirthDate)</th>
            <th>@Html.DisplayFor(model => model.Seller.Salary)</th>
            <th>Department</th>
        </tr>
    <thead>
        <tr class="bg-success">
            <th>Id</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Status</th>
        </tr>
    </thead>
    </thead>
    @foreach (var item in Model.SalesRecord)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Status)
                </td>
                <td>
                    
                </td>
                <td>
            </tr>
        </tbody>
    }
</table>
<a asp-action="Index"> <input type="button" class="btn btn-info" value="Back To Index"/></a>